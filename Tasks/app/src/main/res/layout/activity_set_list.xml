<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Taski"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SetList">

    <LinearLayout
        android:id="@+id/listToCreateTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tworzenie_zadania"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nameOfTask"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="@string/nazwa_zadania"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/data"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:gravity="center"
            android:text="@string/dd_mm_yyyy"
            android:inputType="date"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/godzina"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="time"
            android:gravity="center"
            android:text="@string/hh_mm"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prorytet_zadania"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radioGroupPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textSize="18sp"
                android:id="@+id/radioMostPriority"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/najwa_niejszy"
                android:textColor="#FF0000"
                android:checked="true"
                />

            <RadioButton
                android:textSize="18sp"
                android:id="@+id/radioNormalPriority"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/normalny"
                android:textColor="#FFD500"
                />

            <RadioButton
                android:textSize="18sp"
                android:id="@+id/radioLowPriority"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/ma_o_istotny"
                android:textColor="#2BFF00"
                />

        </RadioGroup>

        <Button
            android:id="@+id/buttonStworzTaska"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="createNewButton"
            android:text="@string/stw_rz" />
    </LinearLayout>
</RelativeLayout>