<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Taski"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/light_bar"
    android:weightSum="20"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bar">

        <LinearLayout
            android:id="@+id/go_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="9dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="24sp"
                android:text="Create tasks"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:layout_marginTop="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:weightSum="20"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="vertical"
                android:background="@drawable/medium_bar"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="8"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Task Name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bar"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/nameOfTaskEditText"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:drawableEnd="@drawable/description_ico_32"
                android:hint="Enter task name"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="vertical"
                android:background="@drawable/medium_bar"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="8"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Task description"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bar"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/taskDescriptionEditText"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:drawableEnd="@drawable/description_ico_32"
                android:gravity="center"
                android:inputType="textPersonName"
                android:hint="Enter task description"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="vertical"
                android:background="@drawable/medium_bar"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="8"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bar"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/taskDateEditText"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:gravity="center"
                android:drawableEnd="@drawable/calendar_ico_32"
                android:inputType="date"
                android:hint="@string/dd_mm_yyyy"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="vertical"
                android:background="@drawable/medium_bar"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="8"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bar"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/taskTimeEditText"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:drawableEnd="@drawable/time_ico_32"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="time"
                android:hint="@string/hh_mm"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="vertical"
                android:background="@drawable/medium_bar"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="8"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Task priority"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bar"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight="2">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3"
                    >
                    <RadioButton
                        android:id="@+id/radioLowPriority"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:buttonTint="@color/white"
                        android:gravity="center"
                        android:text="LOW"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"
                        android:background="#106e29"
                        android:checked="true"
                        android:layout_margin="2dp"
                        android:onClick="onRadioButtonClicked"/>

                    <RadioButton
                        android:id="@+id/radioNormalPriority"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/white"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:background="#ab6a16"
                        android:text="MEDIUM"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"
                        android:onClick="onRadioButtonClicked"/>



                    <RadioButton
                        android:id="@+id/radioHighPriority"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/white"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="HIGH"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"
                        android:layout_margin="2dp"
                        android:background="#690a12"
                        android:onClick="onRadioButtonClicked"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="5sp"
        android:background="#000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/medium_bar"
        android:shadowRadius="10.0"
        android:shadowColor="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
        <Button
            android:id="@+id/sendNewTaskToDbButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:backgroundTint="@null"
            android:background="@drawable/login_button_effects"
            android:fontFamily="@font/roboto_regular"
            android:text="Create"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:onClick="sendNewTaskToDb"
            />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>