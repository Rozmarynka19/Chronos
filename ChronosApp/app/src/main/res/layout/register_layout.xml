<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_click_fix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/medium_bar"
    android:weightSum="20"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:layout_width="249dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/logo_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="18dp"
                android:text="Let's start the adventure together!"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:background="@drawable/login_back"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/LoginRegistration"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/login_edit"
                android:drawableEnd="@drawable/user_icon_32"
                android:elevation="1dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="Login"
                android:inputType="textEmailAddress"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <RelativeLayout
                android:id="@+id/show_password_reg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_password_background"
                >

                <ImageView
                    android:id="@+id/show_password_image_reg1"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/login_eye"
                    />


                <EditText
                    android:id="@+id/PasswordRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/login_edit"
                    android:drawableEnd="@drawable/lock_icon_32"
                    android:elevation="1dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/show_password_reg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_password_background"
                >

                <ImageView
                    android:id="@+id/show_password_image_reg2"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/login_eye"
                    />


                <EditText
                    android:id="@+id/PasswordRegistration2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/login_edit"
                    android:drawableEnd="@drawable/lock_icon_32"
                    android:elevation="1dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Re-password"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/EmailRegistration"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/login_edit"
                android:drawableEnd="@drawable/user_icon_32"
                android:elevation="1dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="E-mail "
                android:inputType="textEmailAddress"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/PhoneRegistration"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/login_edit"
                android:drawableEnd="@drawable/user_icon_32"
                android:elevation="1dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="Phone number"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/login_error_message"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/red"
                android:text=""
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:textSize="16dp"
                />

            <Button
                android:id="@+id/Register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:backgroundTint="@null"
                android:background="@drawable/login_button_effects"
                android:fontFamily="@font/roboto_regular"
                android:text="Register"
                android:textAllCaps="false"
                android:textSize="16dp" />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© AlgoLearn Team 2021"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:fontFamily="@font/roboto_regular"
                />
        </LinearLayout>
    </RelativeLayout>



    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</LinearLayout>